<header class="main-header">

  <!-- Logo -->
  <%= link_to root_path, class: 'logo' do %>
      <!-- mini logo for sidebar mini 50x50 pixels -->
      <span class="logo-mini"><b>T</b></span>
      <!-- logo for regular state and mobile devices -->
      <span class="logo-lg"><b>Tortone Automotores</b></span>
  <% end %>

  <nav class="navbar navbar-static-top navbar-danger" role="navigation">

    <!-- Sidebar toggle button-->
    <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
      <span class="sr-only">Esconder/Mostrar menú</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <% if content_for? :title %>
        <h3> <%= content_for(:title) %> </h3>
      <% end %>
    </a>

    <% if logged_in? %>
      <div class="navbar-custom-menu">
        <ul class="nav navbar-nav">
          <li class="dropdown">
            <%= link_to vehicles_path, class: 'dropdown-toggle',
                'data-toggle' => 'dropdown', title: 'Nuevo Vehículo'  do %>
              <%= icon 'car' %> +
            <% end %>
            <ul class="dropdown-menu">
              <li> <%= link_to 'Vehículo propio', new_vehicle_path(is_owner: true) %>  </li>
              <li> <%= link_to 'Vehículo para la venta', new_vehicle_path %>  </li>
            </ul>
          </li>
          <li>
            <%= link_to new_budget_path, title: 'Generar Presupuesto' do %>
              <%= icon 'file-text-o' %> +
            <% end %>
          </li>
          <%= render 'application/navbar_user_profile' %>
        </ul>
      </div>
    <% end %>
  </nav>

</header>

