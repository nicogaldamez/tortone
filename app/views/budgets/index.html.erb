<header class="content-header">
  <%= link_to 'Nuevo Presupuesto', new_budget_path, class: 'btn btn-primary pull-right' %>
  <h1>Presupuestos</h1>
</header>

<section class="content">

  <article class="box box-primary">
    <section class="box-body">

      <%= render 'filter' %>

      <table class="table table-custom table-hover">
        <thead>
          <tr>
            <th>Fecha</th>
            <th>Vehículo</th>
            <th>Año</th>
            <th>Precio</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <%= render @presenter.budgets %>
        </tbody>
      </table>

      <%= paginate @presenter.budgets %>

      <%= content_tag :p, 'No se encontraron presupuestos', class: 'text-center' unless @presenter.budgets.any? %>

    </section>
  </article>

</section>
