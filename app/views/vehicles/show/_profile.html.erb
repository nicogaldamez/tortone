<div class="box box-primary">

  <div class="box-body box-profile">
    <h3 class="text-center"><%= vehicle.brand_and_model %></h3>
    <h4 class="text-center"><%= vehicle.version %></h4>
    <br />
    <h4 class="text-center"><b><%= vehicle.specs %></b></h4>

    <br />

    <ul class="list-group list-group-unbordered">
      <li class="list-group-item">
        <b>Consignaci√≥n</b>
        <span class="text-muted pull-right"><%= vehicle.is_consignment %></span>
      </li>
      <li class="list-group-item">
        <h2 class="text-center"><b><%= vehicle.price %></b></h2>
      </li>
    </ul>

    <div class="row">
      <div class="col-md-6">
        <%= link_to '<b>Editar</b>'.html_safe, edit_vehicle_path(vehicle),
