<div class="box box-primary">

  <div class="box-header with-border">
    <h3 class="box-title">
      <span class="fa fa-file-text-o"></span>
      Datos del registro
    </h3>
    <div class="box-tools pull-right">
      <button type="button" class="btn btn-box-tool" data-widget="collapse">
        <i class="fa fa-minus"></i>
      </button>
    </div>
  </div>

  <div class="box-body">

    <ul class="list-group list-group-unbordered">
      <li class="list-group-item" style="margin-top: 10px;">
        <b>Patente</b>
        <span class="text-muted pull-right"><%= vehicle.plate %></span>
      </li>
      <li class="list-group-item">
        <b>Número de motor</b>
        <span class="text-muted pull-right"><%= vehicle.motor_number %></span>
      </li>
      <li class="list-group-item">
        <b>Número de chasis</b>
        <span class="text-muted pull-right"><%= vehicle.chassis_number %></span>
      </li>
    </ul>

  </div>

</div>
