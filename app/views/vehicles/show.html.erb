<header class="content-header">
  <h1>
    Detalle del veh√≠culo
    <%= back_to_link 'Volver', '', 'pull-right' %>
  </h1>
</header>

<section class="content">
  <ul id="js-attachments">
    <%= render @vehicle.attachments %>
  </ul>
  <% # jquery upload template # %>
  <input id="fileupload" type="file" name="attachment[file]"
      data-url="<%= url_for([@vehicle, :attachments]) %>" multiple>

<div class="row">
<div class="col-md-9">
      <%= render partial: 'vehicles/show/general_data', locals: { vehicle: @vehicle } %>
    </div>
    <div class="col-md-3">
      <div class="row">
        <div class="col-md-12">
          <%= render partial: 'vehicles/show/financial_data', locals: { vehicle: @vehicle } %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <%= render partial: 'vehicles/show/register_data', locals: { vehicle: @vehicle } %>
        </div>
      </div>
    </div>
  </div>

</section>

<script type="text/javascript">
  $(function () {
    $('#fileupload').fileupload({
      dataType: 'script'
    });
  });
</script>
