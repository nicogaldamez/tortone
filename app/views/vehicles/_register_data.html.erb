<div class="box box-primary">
  
  <div class="box-header with-border">
    <h3 class="box-title">
      <span class="fa fa-file-text-o"></span>
      Datos del registro
    </h3>
  </div>

  <div class="box-body">
    
    <div class="row">
      <div class="col-md-12">
        <fieldset class="form-group">
          <%= optional_label f, :plate %>
          <%= f.text_field :plate, class: 'form-control', placeholder: 'Ingrese una patente' %>
        </fieldset>
      </div>
    </div>
    
    <div class="row">
      <div class="col-md-12">
        <fieldset class="form-group">
          <%= optional_label f, :motor_number %>
          <%= f.text_field :motor_number, class: 'form-control', placeholder: 'Ingrese un número de motor' %>
        </fieldset>
      </div>
    </div>
    
    <div class="row">
      <div class="col-md-12">
        <fieldset class="form-group">
          <%= optional_label f, :chassis_number %>
          <%= f.text_field :chassis_number, class: 'form-control', placeholder: 'Ingrese un número de chasis' %>
        </fieldset>
      </div>
    </div>

  </div>

</div>