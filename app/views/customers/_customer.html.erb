<tr id="<%= dom_id(customer) %>">

  <td> <%= link_to customer.full_name, edit_customer_path(customer) %> </td>
  <td class="text-center"> <%= customer.phones %> </td>
  <td class="text-center"> <%= customer.email %> </td>
  <td>
    <%= link_to 'Editar', edit_customer_path(customer), class: 'btn btn-xs btn-primary' %>
    <%= link_to 'Eliminar', customer, method: :delete,
        data: {confirm: '¿Está seguro?'}, class: 'btn btn-xs btn-danger' %>
  </td>

</tr>
