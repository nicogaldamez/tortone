<%= form_for @buyer  do |f| %>

<article class="box box-primary">

  <section class="box-body">
    <div class="row">
      <div class="col-md-12">
        <h3> Vehículos </h3>
        <div id="js-buyer-interests">
          <%= f.fields_for :buyer_interests do |interest| %>
            <%= render 'buyer_interest_fields', f: interest %>
          <% end %>
          <div class="links">
            <small class="text-muted"> ¿El comprador está interesado en más de un vehículo? Haga click </small>
            <%= link_to_add_association "aquí".html_safe, f, :buyer_interests,
                  class: 'btn btn-default btn-xs' %>
          </div>
        </div>
      </div>
    </div>

    <hr>

    <div class="row">
      <div class="col-md-12">
        <h3> Datos del comprador</h3>

      </div>

      <div class="col-md-6">
        <fieldset class="form-group">
          <%= f.label :first_name %>
          <%= f.text_field :first_name, class: 'form-control', required: true %>
        </fieldset>
      </div>

      <div class="col-md-6">
        <fieldset class="form-group">
          <%= optional_label f, :last_name %>
          <%= f.text_field :last_name, class: 'form-control' %>
        </fieldset>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <fieldset class="form-group">
          <%= f.label :phones %>
          <%= f.text_field :phones, class: 'form-control', required: true %>
        </fieldset>
      </div>

      <div class="col-md-6">
        <fieldset class="form-group">
          <%= optional_label f, :email %>
          <%= f.email_field :email, class: 'form-control' %>
        </fieldset>
      </div>
    </div>

    <div class="row">
      <div class="col-md-5">
        <fieldset class="form-group">
          <%= f.label :max_price, 'Máximo a pagar' %>
          <div class="input-group">
            <span class="input-group-addon">
              <span class="fa fa-dollar"></span>
            </span>
            <%= f.number_field :max_price, class: 'form-control', required:                             true, placeholder: 'Máximo' %>
          </div>
        </fieldset>
      </div>
      
      <div class="col-md-6 col-md-offset-1">
        <div class="row">
          <div class="col-md-2">
            <div class="fake-label"></div>
            <fieldset class="form-group">
              <%= f.check_box :is_hdi %>
              <%= f.label :is_hdi %>
            </fieldset>
          </div>
          <div class="col-md-4">
            <div class="fake-label"></div>
            <fieldset class="form-group">
              <%= f.check_box :has_automatic_transmission %>
              <%= f.label :has_automatic_transmission%>
            </fieldset>
          </div>
        </div>
      </div>
    </div>



  </section>
</article>

<div class="row">
  <div class="col-md-12">
    <fieldset class="form-group">
      <%= f.submit 'Guardar', class: 'btn btn-success', data: { 'disable-with' => 'Guardando...' } %>
    </fieldset>
  </div>
</div>

<% end %>
