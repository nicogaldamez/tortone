<%= form_for @presenter.filter, url: :buyers, method: :get do |f| %>

  <div class="row">
    <div class="col-md-12">

      <fieldset class="form-group">

        <div class="col-md-3">
          <%= f.label :name %>
          <%= f.search_field :name, class: 'form-control',
                placeholder: 'Ingrese el nombre o apellido',
                autofocus: true
          %>
        </div>
        
        <div class="col-md-3">
          <fieldset class="form-group">
            <%= f.label :from %>
            <div class='input-group date datepicker'>
              <span class="input-group-addon">
                <span class="fa fa-calendar"></span>
              </span>
              <%= f.text_field :from, class: 'form-control' %>
            </div>
          </fieldset>
        </div>

        <div class="col-md-3">
          <fieldset class="form-group">
            <%= f.label :to %>
            <div class='input-group date datepicker'>
              <span class="input-group-addon">
                <span class="fa fa-calendar"></span>
              </span>
              <%= f.text_field :to, class: 'form-control' %>
            </div>
          </fieldset>
        </div>

        <div class="col-md-3">
          <div class="fake-label"></div>
          <%= f.submit 'Filtrar', class: 'btn btn-primary',
                  'data-disable-with' => 'Filtrando...' %>
          <%= link_to 'Limpiar', [:buyers], class: 'btn btn-default',
                'data-disable-with' => 'Espere...' %>
        </div>

      </fieldset>

    </div>
  </div>

<% end %>
